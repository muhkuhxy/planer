
GET    /login         @controllers.AuthenticationController.loginPage
POST   /login         @controllers.AuthenticationController.login
GET    /logout        @controllers.AuthenticationController.logout

GET    /              controllers.smt.PlanController.overview

GET    /territory     controllers.territory.TerritoryController.overview

GET    /plan          controllers.smt.PlanController.overview
POST   /plan          controllers.smt.PlanController.create
GET    /plan/:id      controllers.smt.PlanController.show(id: Long)
PUT    /plan/:id      controllers.smt.PlanController.save(id: Long)
DELETE /plan/:id      controllers.smt.PlanController.remove(id: Long)

GET    /assignees     controllers.smt.AssigneeController.list
PUT    /assignees     controllers.smt.AssigneeController.save

GET    /assets/*file  controllers.Assets.at(path="/public", file)
