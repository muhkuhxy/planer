
GET    /login         @controllers.AuthenticationController.loginPage
POST   /login         @controllers.AuthenticationController.login
POST   /api/login     @controllers.AuthenticationController.spaLogin
GET    /logout        @controllers.AuthenticationController.logout
GET    /api/logout    @controllers.AuthenticationController.logout
GET    /api/user      @controllers.AuthenticationController.user

GET    /              controllers.smt.PlanController.overview

GET    /territory     controllers.territory.TerritoryController.overview
GET    /territory/:id controllers.territory.TerritoryController.show(id: String)

GET    /plan          controllers.smt.PlanController.overview
GET    /api/plan      controllers.smt.PlanController.listJson
POST   /plan          controllers.smt.PlanController.create
POST   /api/plan      controllers.smt.PlanController.create
GET    /plan/:id      controllers.smt.PlanController.show(id: Long)
GET    /api/plan/:id  controllers.smt.PlanController.showJson(id: Long)
PUT    /plan/:id      controllers.smt.PlanController.save(id: Long)
PUT    /api/plan/:id  controllers.smt.PlanController.save(id: Long)
DELETE /plan/:id      controllers.smt.PlanController.remove(id: Long)
DELETE /api/plan/:id  controllers.smt.PlanController.remove(id: Long)

GET    /assignees     controllers.smt.AssigneeController.list
GET    /api/assignees controllers.smt.AssigneeController.listJson
